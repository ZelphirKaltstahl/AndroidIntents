<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.xiaolong.intents.ColorActivity">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_weight=".30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/COLOR_ACTIVITY_RED_BUTTON_TEXT"
            android:id="@+id/color_activity_red_button"
            android:layout_column="0"
            android:minHeight="0dp"

            android:onClick="on_red" />

        <Button
            android:layout_weight=".30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/COLOR_ACTIVITY_GREEN_BUTTON_TEXT"
            android:id="@+id/color_activity_green_button"
            android:layout_column="0"
            android:minHeight="0dp"

            android:onClick="on_green" />

        <Button
            android:layout_weight=".30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/COLOR_ACTIVITY_BLUE_BUTTON_TEXT"
            android:id="@+id/color_activity_blue_button"
            android:layout_column="0"
            android:minHeight="0dp"

            android:onClick="on_blue" />
    </TableRow>
</TableLayout>
