<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.xiaolong.intents.FontActivity">

    <Button
        android:layout_weight=".50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/FONT_ACTIVITY_SMALL_BUTTON_TEXT"
        android:id="@+id/font_activity_small_button"
        android:layout_column="0"
        android:minHeight="0dp"

        android:onClick="on_small" />

    <Button
        android:layout_weight=".50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/FONT_ACTIVITY_MEDIUM_BUTTON_TEXT"
        android:id="@+id/font_activity_medium_button"
        android:layout_column="1"
        android:minHeight="0dp"

        android:onClick="on_medium" />

    <Button
        android:layout_weight=".50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/FONT_ACTIVITY_LARGE_BUTTON_TEXT"
        android:id="@+id/font_activity_large_button"
        android:layout_column="2"
        android:minHeight="0dp"

        android:onClick="on_large" />
</GridLayout>
